  &none &kp N0 &kp N1 &kp N2 &kp N3 &none /* */ &kp BSLH  &kp LSHFT &kp LCTRL &kp LALT  &kp LGUI  &kp PIPE
                      &none  &none  &none /* */ &none &none &none
)

ZMK_LAYER(nav,
  &kp LG(N0) &kp LG(N8) &kp LG(N7) &kp LG(N6) &kp LG(N5) &none /* */ &kp LC(LEFT) &kp LC(DOWN)  &kp LC(UP)    &kp LC(RIGHT) &kp LC(X) &none
